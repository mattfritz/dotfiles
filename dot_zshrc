# ZSH DEBUG: zmodload zsh/zprof

# zplug
export ZPLUG_HOME=/usr/local/opt/zplug
if [ -f $ZPLUG_HOME/init.zsh ]; then
  source $ZPLUG_HOME/init.zsh

  zstyle ':prezto:*:*' case-sensitive 'no'
  zstyle ':prezto:*:*' color 'yes'
  zstyle ':prezto:module:editor' key-bindings 'vi'
  zstyle ':prezto:module:editor' dot-expansion 'yes'
  zstyle ':prezto:module:syntax-highlighting' highlighters \
    'main' \
    'brackets'

  zplug "modules/environment", from:prezto
  zplug "modules/editor", from:prezto
  zplug "modules/history", from:prezto
  zplug "modules/directory", from:prezto
  zplug "modules/spectrum", from:prezto
  zplug "modules/utility", from:prezto
  zplug "modules/archive", from:prezto
  zplug "modules/git", from:prezto
  zplug "modules/ssh", from:prezto
  zplug "modules/gpg", from:prezto

  zplug "modules/syntax-highlighting", from:prezto
  zplug "modules/history-substring-search", from:prezto
  zplug "modules/autosuggestions", from:prezto
  zplug "modules/completion", from:prezto

  if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
      echo; zplug install
    fi
  fi

  zplug load

  # history-substring-search
  bindkey "$terminfo[kcuu1]" history-substring-search-up
  bindkey "$terminfo[kcud1]" history-substring-search-down
  bindkey -M vicmd 'k' history-substring-search-up
  bindkey -M vicmd 'j' history-substring-search-down
fi

# ASDF environment
export ASDF_DIR="$(brew --prefix asdf)/libexec"
source $ASDF_DIR/asdf.sh

# FZF
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_OPTS="--preview 'tree -C {} | head -200'"
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Starship
# export STARSHIP_LOG=trace starship timings
export STARSHIP_LOG=error
[ -x "$(command -v starship)" ] && eval "$(starship init zsh)"

# Zoxide
[ -x "$(command -v zoxide)" ] && eval "$(zoxide init zsh --cmd cd)"

# Secrets export
[ -f ~/.secret ] && source ~/.secret

alias nvimdb=nvim --cmd 'lua vim.lsp.set_log_level("debug")'
alias cz='chezmoi'
alias av='aws-vault'
alias dc='docker-compose'
alias hdev="docker-compose -f $HOME/code/homebot/hbdev/docker/services.yml -p hbdev"
alias hbdev="$HOME/code/homebot/hbdev/bin/hbdev"
alias tools="docker-compose -f $HOME/code/homebot/hbdev/docker/tools.yml -p hbdev"

alias tn='tmux new-session -s'
alias ta='tmux attach-session -t'
alias tl='tmux list-sessions'

alias v='nvim'

# ZSH DEBUG: zprof
