[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = always
  autosetuprebase = always
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
[core]
  autocrlf = false
  editor = nvim
  excludesfile = ~/.gitignore
  pager = delta
[delta]
  navigate = true
  side-by-side = true
[diff]
  algorithm = patience
  colorMoved = default
  mnemonicprefix = true
  tool = vimdiff
[fetch]
  prune = true
[format]
  pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[init]
  defaultBranch = master
[interactive]
  diffFilter = delta --color-only
[merge]
  conflictstyle = diff3
[push]
  default = simple
[rerere]
  enabled = true
[user]
  name = Matt Fritz
  email = mfritzer@gmail.com

